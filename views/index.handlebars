<h3 class="header">NPR Headlines for the U.S.</h3>
    
    <table id="results">
      <thead>
      </thead>
      <tbody>
        {{#each articles}}
        <div data-id={{_id}}>
          <a href={{link}}>{{title}}</a><br />
          <img src={{image}} /><br />
          <p>{{summary}}</p>
          {{#unless saved}}
            <!-- Instead of using handlebars, call a route to change the value of saved -->
            {{> save-button saved=false}}
          {{/unless}}
          {{#if saved}}
            {{> save-button saved=true}}
          {{/if}}
        <!-- Results from DB here -->
        </div>
        {{/each}}
      </tbody>
    </table>
    